<h1>Create new book</h1>

<%= form_for Book.new do |f| %>

  <p>Количество листов: <br/><%= f.text_field :number %></p>
  <p>Название: <br/><%= f.text_field :name %></p>
  <p>Описание: <br/><%= f.text_field :description %></p>
  <p>Рейтинг: <br/><%= f.text_field :rating %></p>

  <p><%= f.submit "Создать товар" %></p>

<% end %>